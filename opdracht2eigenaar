
/**
 * class Eigenaar - Eigenaar kan kat adopteren
 *
 * @author Leroy Kats
 * @version 1.0
 */
public class Eigenaar
{
    private String naam;
    private Kat kat;
    
    public Eigenaar (String naam)
    {
        this.naam = naam;
    }
    
    public String getNaam()
    {
        return this.naam;
    }
    
    public void setNaam(String naam)
    {
        this.naam = naam;
    }
    
    public void adopteerKat(Kat kat)
    {
        this.kat = kat;
    }
    
    public void Aaien()
    {
        this.kat.verhoogTevredenheidsniveau();
    }
    
    public void Gelukkig()
    {
        this.kat.checkGelukkig();
    }
    
}
