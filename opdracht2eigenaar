/**
 * class Eigenaar - Eigenaar kan kat adopteren
 *
 * @author Leroy Kats
 * @version 1.0
 */
public class Eigenaar
{
    private String naam;
    private Kat kat;
    
    public Eigenaar (String naam)
    {
        this.naam = naam;
    }
    
    public String getNaam()
    {
        return this.naam;
    }
    
    public void setNaam(String naam)
    {
        this.naam = naam;
    }
    
    public void adopteerKat(Kat kat)
    {
        this.kat = kat;
    }
    
    public void Aaien()
    {
        if(this.kat.tevredenheidsniveau <= 5.0)
        {
            this.kat.tevredenheidsniveau = kat.tevredenheidsniveau + 0.3;
        }
        else
        {
            this.kat.tevredenheidsniveau = 5.0;
        }
    }
    
    public double getTevredenheidsniveau()
    {
        return this.kat.tevredenheidsniveau;
    }
    
    public boolean checkGelukkig()
    {
        if(this.kat.tevredenheidsniveau > 3.5)
        {
            return true;
        }
        else
        {
            return false;
        }
    }
    
    public String getKatNaam()
    {
        return this.kat.getNaam();
    }
}
